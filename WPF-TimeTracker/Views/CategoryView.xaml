<Window x:Class="WPF_TimeTracker.Views.CategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CategoryView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding NewCategoryName}" PlaceholderText="Enter category name" />
            <Button Command="{Binding AddCategoryCommand}" Content="Add Category" />
            <ListBox ItemsSource="{Binding Categories}" DisplayMemberPath="Name" 
                     SelectedValuePath="Id" SelectedValue="{Binding SelectedCategoryId}" />
            <Button Command="{Binding DeleteCategoryCommand}" Content="Delete Selected Category" />
        </StackPanel>
    </Grid>
</Window>